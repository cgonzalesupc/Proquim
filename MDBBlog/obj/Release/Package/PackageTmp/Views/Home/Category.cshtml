    int categoria = ViewBag.categoria;
    var listCountry = MDBBlog.Models.Productos.ListProductos();
    listCountry = listCountry.Where(q => q.categoria == categoria).ToList();
    string active1 = "", active2 = "", active3 = "", active4 = "";

    switch (categoria)
